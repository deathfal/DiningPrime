<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}DiningPrime
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
	</head>
	<body class="bg-dark text-light">
		<header class="bg-primary sticky-top">
			<div class="container">
				<nav class="navbar navbar-expand-lg navbar-dark">
					<a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
						<img src="{{ asset('img/logo.png') }}" style="border-radius: 25%;" alt="DiningPrime Logo" width="40" height="40" class="me-2">
						<span>DiningPrime</span>
					</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav ms-auto">
							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link" href="#">{{ app.user.firstName }} {{ app.user.lastName }}</a>
								</li>
								{% if is_granted('ROLE_ADMIN') %}
									<li class="nav-item">
										<a class="nav-link btn btn-warning text-dark ms-2" href="{{ path('app_admin') }}">Admin Dashboard</a>
									</li>
								{% endif %}
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_login') }}">Login</a>
								</li>
							{% endif %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_about') }}">About Us</a>
							</li>
							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link btn btn-danger text-light ms-2" href="{{ path('app_logout') }}">Logout</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</nav>
			</div>
		</header>
		<main class="container py-5">
			{% block body %}{% endblock %}
		</main>
	</body>
</html>
