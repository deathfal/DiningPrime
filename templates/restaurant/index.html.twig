{% extends 'base.html.twig' %}

{% block title %}Restaurant Index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Restaurant Index</h1>

    <a href="{{ path('app_restaurant_new') }}" class="btn btn-success mb-3">Create New Restaurant</a>

    <table class="table table-bordered table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.name }}</td>
                <td>{{ restaurant.address }}</td>
                <td>{{ restaurant.phoneNumber }}</td>
                <td>
                    <a href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}" class="btn btn-primary btn-sm">Show</a>
                    <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    {{ include('restaurant/_delete_form.html.twig', {'restaurant': restaurant}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
