{% extends 'base.html.twig' %}

{% block title %}Restaurant Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card bg-dark text-light shadow-lg">
        <div class="card-header">
            <h2 class="card-title mb-0">Restaurant Details</h2>
        </div>
        <div class="card-body">
            <table class="table table-dark table-striped">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ restaurant.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Name</th>
                        <td>{{ restaurant.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Address</th>
                        <td>{{ restaurant.address }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Phone Number</th>
                        <td>{{ restaurant.phoneNumber }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_restaurant_index') }}" class="btn btn-secondary">Back to list</a>
            <div>
                <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-warning me-2">Edit</a>
                {{ include('restaurant/_delete_form.html.twig', {'restaurant': restaurant}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
