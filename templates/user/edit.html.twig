{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4">Edit User</h1>

		<div class="mb-3">
			{{ form_start(form) }}
			{{ form_row(form.email) }}
			{{ form_row(form.roles) }}
			{{ form_row(form.plainPassword, { 'label': 'New Password (optional)' }) }}
			{{ form_row(form.firstName) }}
			{{ form_row(form.lastName) }}
			{{ form_row(form.isVerified) }}
			<button class="btn btn-primary">{{ button_label|default('Update') }}</button>
			{{ form_end(form) }}
		</div>

		<a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to list</a>

		<div class="mt-3">
			{{ include('user/_delete_form.html.twig', {'user': user}) }}
		</div>
	</div>
{% endblock %}
