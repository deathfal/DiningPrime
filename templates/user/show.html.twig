{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card bg-dark text-light shadow-lg">
        <div class="card-header">
            <h2 class="card-title mb-0">User Details</h2>
        </div>
        <div class="card-body">
            <table class="table table-dark table-striped">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Password</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    <tr>
                        <th scope="row">First Name</th>
                        <td>{{ user.firstName }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Last Name</th>
                        <td>{{ user.lastName }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Is Verified</th>
                        <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to list</a>
            <div>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning me-2">Edit</a>
                {{ include('user/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
