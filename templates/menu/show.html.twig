{% extends 'base.html.twig' %}

{% block title %}Menu Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card bg-dark text-light shadow-lg">
        <div class="card-header">
            <h2 class="card-title mb-0">Menu Details</h2>
        </div>
        <div class="card-body">
            <table class="table table-dark table-striped">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ menu.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Title</th>
                        <td>{{ menu.title }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>{{ menu.description }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Price</th>
                        <td>{{ menu.price }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_menu_index') }}" class="btn btn-secondary">Back to list</a>
            <div>
                <a href="{{ path('app_menu_edit', {'id': menu.id}) }}" class="btn btn-warning me-2">Edit</a>
                {{ include('menu/_delete_form.html.twig', {'menu': menu}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
