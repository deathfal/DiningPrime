{% extends 'base.html.twig' %}

{% block title %}Dish{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card bg-dark text-light shadow-lg">
            <div class="card-header">
                <h2 class="card-title mb-0">Dish Details</h2>
            </div>
            <div class="card-body">
                <table class="table table-striped table-dark">
                    <tbody>
                        <tr>
                            <th scope="row">ID</th>
                            <td>{{ dish.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Name</th>
                            <td>{{ dish.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{ dish.description }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Price</th>
                            <td>{{ dish.price }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="{{ path('app_dish_index') }}" class="btn btn-secondary">Back to list</a>
                <div>
                    <a href="{{ path('app_dish_edit', {'id': dish.id}) }}" class="btn btn-warning me-2">Edit</a>
                    {{ include('dish/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
